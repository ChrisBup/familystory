<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FamilyStory</title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!-- <link rel="stylesheet" href="stylesheets/styles.css">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.1.1/css/bootstrap.min.css"> -->

    <script type='text/template' id='member-list-template'>
    <a href='#/new' class='btn btn-primary'>New Member</a>
    <hr />
    <table class='table striped'>
      <thead>
        <tr>
          <th>name</th>
          <th>date of birth</th>
          <th>city</th>
          <th>bio</th>
        </tr>
      </thead>
      <tbody>
        <% _.each(members, function(member) { %>
          <tr>
            <td><%= htmlEncode(member.get('name')) %></td>
            <td><%= htmlEncode(member.get('dob')) %></td>
            <td><%= htmlEncode(member.get('city')) %></td>
            <td><%= htmlEncode(member.get('bio')) %></td>
            <td><a class="btn" href="#/edit/<%= member.id %>">Edit</a></td>
          </tr>
        <% }); %>
      </tbody>
    <table>
  </script>

  </head>
  <body>

    <div class="navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse">
            <ul class="nav navbar-nav">
              <li><h3 class='logotype'><%= link_to 'FamilyStory', root_path %></h3></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if !current_member %>
                  <li><%= link_to 'join the family!', signup_path %></li>
                  <li><%= link_to 'login', login_path %></li>
                <% else %>
                  <li><a href="/members/<%= current_member.id %>/edit">edit profile</a></li>
                  <li><%= link_to 'logout', logout_path, method: :delete%></li>
                <% end %>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container -->
      </div><!--/.navbar-inner -->
    </div><!--/.navbar-inverse -->

  <div class="container">

    <div class="row">

      <div>
        <% if alert %>
          <h1 class='alert'>
            <%= flash.now[:alert] %>
          </h1>
        <% end %>
        <% if notice %>
          <h1 class='notice'>
            <%= flash.now[:notice] %>
          </h1>
        <% end %>
      </div>

    </div><!--/row-->

    <h1>Family Members</h1>
    <hr />
    <div class='page'></div>
    <ul class='members'></ul>
    <hr />

  </div>

  <script>
    $(function(){
      FamilyStory.initialize();
    })
  </script>

  </body>
</html>
